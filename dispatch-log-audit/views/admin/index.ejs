<% include ../partials/header %>
    <h1>Admin Index</h1>

    <form action="/admin" method="POST">
        <label for="startingCallNumber">Starting Call Number: <%=currentYear%>-</label>
        <input type="number" name="starting" id="startingCallNumber">
        
        <label for="endingCallNumber">Ending Call Number: <%=currentYear%>-</label>
        <input type="number" name="ending" id="endingCallNumber">
        
        <label for="percentage">Percentage of Calls to Audit:</label>
        <input type="number" name="percentage" id="percentage">
        
        <button type="submit">Randomize Calls</button>
    </form>


<% if (submittedValues) { %>
    <div>
        <p>You chose the following range of call numbers: <strong><%= currentYear %>-<%=starting %></strong> - <strong><%= currentYear %>-<%=ending %></strong>.</p>
        <p>This is a total of <%=totalCalls + 1 %> calls, <%=percentageOfCalls * 100%>% of which is <%=numberOfCallsToAudit %>.</p>
        
        <p>Here are your randomly selected calls for this range: 
        <%=listOfRandomCallNumbers %></p>

        <form action="">
            <button>Generate Audits</button>
        </form>
  
    </div>
    <% } %>
    
<% include ../partials/header %>