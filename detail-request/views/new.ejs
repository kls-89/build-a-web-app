<% include partials/header %>
    <h1 class="text-center">Add New Detail</h1>
    <h6 class="text-center"><span class="text-danger">*</span> Required Field</h6>
    <form action="/details" method="POST">
        <!-- DATE -->
        <div class="form-group">
            <label for="detailDate">Detail Date<span class="text-danger">*</span></label>
            <input class="form-control" type="date" name="detailDate" id="detailDate" required>
        </div>
        <!-- START TIME -->
        <div class="form-group">
            <label for="StartTime">Detail Start Time<span class="text-danger">*</span></label>
            <input class="form-control" type="time" name="StartTime" id="StartTime" required>
        </div>
        <!-- ASAP REQUEST? -->
        <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="asapStart" id="asapStart">
                <label class="form-check-label" for="asapStart">ASAP Request?</label>
              </div>
        <!-- DETAIL DURATION -->
        <div class="form-group">
                <label for="detailDuration">Detail Duration<span class="text-danger">*</span></label>
                <select class="form-control" id="detailDuration" required>
                  <option value="detailDurationHalf">Half Day</option>
                  <option value="detailDurationFull">Full Day</option>
                  <option value="detailDurationUnknown">Unknown</option>
                </select>
              </div>
        
        <!-- LOCATION -->
        <label for="detailLocation">Detail Location:</label>
        <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label for="streetOneNumber">Street Number</label>
                        <input type="number" id="streetOneNumber" name="streetOneNumber" class="form-control" placeholder="123">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="streetOneName">Street Name<span class="text-danger">*</span></label>
                        <input type="text" id="streetOneName" name="streetOneName" class="form-control" placeholder="North" required>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                            <label for="streetOneSuffix">Street Suffix</label>
                            <select class="form-control" id="streetOneSuffix" name="stretOneSuffix">
                                    <option value="avenue">Ave</option>
                                    <option value="boulevard">Blvd</option>
                                    <option value="court">Ct</option>
                                    <option value="lane">Ln</option>
                                    <option value="place">Pl</option>
                                    <option value="road">Rd</option>
                                    <option value="street" selected>St</option>
                                    <option value="way">Way</option>
                                </select>
                    </div>
                </div>
              </div>
        <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label for="streetTwoNumber">Optional Cross Street Number</label>
                        <input type="number" id="streetTwoNumber" name="streetTwoNumber" class="form-control" placeholder="123">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="streetTwoNumber">Optional Cross Street Name</label>
                        <input type="text" id="streetTwoName" name="streetTwoName" class="form-control" placeholder="Optional Intersection">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="streetTwoSuffix">Optional Cross Street Suffix</label>
                        <select class="form-control" id="streetTwoSuffix" name="streetTwoSuffix">
                            <option value="" disabled>Street Suffix</option>
                            <option value="avenue">Ave</option>
                            <option value="boulevard">Blvd</option>
                            <option value="court">Ct</option>
                            <option value="lane">Ln</option>
                            <option value="place">Pl</option>
                            <option value="road">Rd</option>
                            <option value="street" selected>St</option>
                            <option value="way">Way</option>
                        </select>
                    </div>
                </div>
              </div>
            <!-- DETAIL REQUESTOR CONTACT INFO -->
            <div class="form-group">
                    <label for="requestorName">Detail Requestor Name<span class="text-danger">*</span></label>
                    <input class="form-control" type="text" required>
            </div>      
            <div class="form-group">
                    <label for="requestorTelephone">Detail Requestor Call Back Number<span class="text-danger">*</span></label>
                    <input class="form-control" type="tel" placeholder="978-555-1234" required>
            </div>      
            
            <!-- NUMBER OF OFFICERS REQUESTED -->
            <div class="form-group">
                <label for="numberOfficers">Number of Officers Requested<span class="text-danger">*</span></label>
                <input class="form-control" type="number" name="numberOfficers" id="numberOfficers" value="1" required>
            </div>
            <!-- CALLTAKER NAME -->
            <div class="form-group">
                <label for="calltakerId">Calltaker<span class="text-danger">*</span></label>
                <input class="form-control" type="text" id="calltakerId" name="calltakerName" placeholder="John Smith" required>
            </div>
        <button class="btn btn-success btn-block">Add Detail</button>
    </form>
    <% include partials/footer %>