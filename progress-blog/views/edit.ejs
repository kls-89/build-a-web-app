<% include partials/header %>
<% include partials/navigation %>
<div class="container">
    <h1 class="text-center">Edit Post</h1>

    <form action="/blogs/<%=post._id%>?_method=PUT" method="POST">
      <div class="form-group">
          <label for="title">Title:</label>
          <input required class="form-control" id="title" type="text" name="blog[title]" value="<%=post.title%>">
      </div>
      
      <div class="form-group">
          <label for="body">Post:</label>
          <textarea required name="blog[body]" class="form-control" id="body" rows="8"><%-post.body%></textarea>
      </div>
      
      <div class="form-group">
          <label for="tags">Tags (separate each with a comma): </label>
          <input name="blog[tags]" class="form-control" id="tags" type="text" placeholder="E.g. blog, learning, programming, express" value="<%=post.tags%>">
      </div>
      
      <button class="btn btn-warning btn-block mt-3">Edit Post</button>
    </form>
    <form action="/blogs/<%=post._id%>?_method=DELETE" method="POST">
    <button class="btn btn-danger btn-block mt-3">Delete Post</button>
    </form>
</div>

<% include partials/footer %>