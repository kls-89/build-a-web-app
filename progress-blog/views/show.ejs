<% include partials/header %>
<% include partials/navigation %>

<div class="container">
    <h1 class="text-primary text-center">Blog Posts</h1>
    <div class="card">
      <div class="card-body">
          <a href="/blogs/<%=post._id%>/edit" class="btn btn-warning float-right text-white">Edit Post</a>
          <h2 class="card-title">
              <%=post.title%>
            </h2>
            <h6 class="card-subtitle text-muted"><%=post.tags%></h6>
            <p class="card-text text-muted">
              <%=post.created.toDateString()%>
            </p>
            <p class="card-body">
              <%-post.body%>
            </p>
            <a class="btn btn-info" href="/blogs" class="card-link">Back</a>
            
      </div>
    </div>

  </div>


<% include partials/footer %>